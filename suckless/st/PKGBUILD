pkgname=st
pkgver=0.8.5
pkgrel=1
pkgdesc='A simple virtual terminal emulator for X.'
arch=('i686' 'x86_64' 'armv7h')
license=('MIT')
depends=('libxft')
makedepends=('git')
provides=(st)
conflicts=(st)
url=https://st.suckless.org
source=()
sha256sums=()

pkgver() {
   cd "${startdir}/st"
   git describe --long --tags | grep -o '[0-9]*\.[0-9]*\.[0-9]*'
}

prepare() {
   cp -a "${startdir}/st/." "${srcdir}"
}

build() {
   make st
}

package() {
   make PREFIX=/usr DESTDIR=${pkgdir} install
}
