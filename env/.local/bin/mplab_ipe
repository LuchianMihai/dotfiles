#!/bin/sh

if [ -d "$XDG_DATA_HOME/.mplab_ipe" ]
then
   mv -f "$XDG_DATA_HOME/.mplab_ipe" "$HOME/.mplab_ipe"
fi

if ! pgrep "mplab_ide" 
then
   mv -f "$XDG_DATA_HOME/.mplabcomm" "$HOME/.mplabcomm"
   mv -f "$XDG_DATA_HOME/.mchp_packs" "$HOME/.mchp_packs"
fi

/usr/bin/mplab_ipe
mv "$HOME/.mplab_ipe" "$XDG_DATA_HOME/.mplab_ipe"

if ! pgrep "mplab_ide"
then
   mv "$HOME/.mplabcomm" "$XDG_DATA_HOME/.mplabcomm"
   mv "$HOME/.mchp_packs" "$XDG_DATA_HOME/.mchp_packs"
fi
